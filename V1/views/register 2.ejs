
<%- include ('header.ejs') -%>

<div class="login-background">
  <div class="login-container p-5 h-800px">
    <div class="">
      <i class="fas fa-user fa-2x py-1" style="color: var(--darkblue)"></i>
      <form action="/register" method="POST" class="text-start my-3">
        <div class="w-75 mx-auto form-holder">
            <div class="d-flex">
                <div class="w-50 me-2">
                    <label for="firstName">First Name:</label>
                    <input type="text" name="firstName" id="firstName" required placeholder="First Name">
                </div>
                <div class="w-50 me-2">
                    <label for="lastName">Last Name:</label>
                    <input type="text" name="lastName" id="lastName" required  placeholder="Last Name">
                </div>
            </div>
            <div class="d-flex">
                <div class="w-50 me-2">
                    <label for="company">Company:</label>
                    <input type="text" name="company" id="company" required  placeholder="Company">
                </div>
                <div class="w-50 me-2">
                    <label for="phone">Phone:</label>
                    <input type="text" name="phone" id="phone" placeholder="Phone">
                </div>
            </div>
          <label for="email">Email:</label>
          <input type="email" name="username" id="username" required placeholder="Email">
          <label for="password">Password:</label>
          <input type="password" name="password" id="password" required placeholder="Password">
        </div>
        <div class="w-75 mx-auto d-flex justify-content-between form-holder">
          <a href="/login">Already have an account?</a>
        </div>
        <div class="my-4 text-center"><button class="btn btn-primary">Submit</button></div>
      </form>
    </div>
  </div>

</div>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
